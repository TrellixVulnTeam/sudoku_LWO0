#:kivy 1.11.1
#:import Factory kivy.factory.Factory

<TaskButton>

    pos_hint: {'y': .2}
    on_release:
        self.task_button_callback(self.parent.button_text)


<PanelToggle>
    size_hint: .25, .85
    background_color: app.lh_color_list
    background_down: app.dh_color_string
    color: app.text_color_list
    font_size: 18

<TaskButtonGrid@GridLayout>

    cols: 3

    size_hint: .9, .35
    pos_hint: {'x': .05, 'y':.1}

    TaskButtonLayout:
        button_text: 'Hint'
        image_path: 'src/64lightbulb.png'

    TaskButtonLayout:
        button_text: 'Show Hotkeys'
        image_path: 'src/64ctrl.png'

    TaskButtonLayout:
        button_text: 'Open Puzzle'
        image_path: 'src/64open.png'

    TaskButtonLayout:
        button_text: 'Solve'
        image_path: 'src/64puzzle.png'

    TaskButtonLayout:
        button_text: 'Reset'
        image_path: 'src/64restart.png'

    TaskButtonLayout:
        button_text: 'Settings'
        image_path: 'src/64settings.png'

<TaskButtonLayout>

    canvas.before:
        Color:
            rgba: app.bg_color
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    size_hint: .28, .15

    TaskButton:
        size_hint: 1, .8
        pos_hint: {'x': 0, 'y': .2}
        source:
            root.image_path

    Label:
        size_hint: 1, .2
        background_color: app.trans
        pos_hint: {'x': 0, 'y': .05}
        text: root.button_text
        color: app.text_color
        font_size: 18

<ToggleLayout>
    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    size_hint: .9, .12

    Label:
        size_hint: .5, 1
        pos_hint: {'x': 0, 'y': 0}
        color: app.text_color
        text: self.parent.pair_name
        font_size: .6*app.text_size
#        halign: 'left'

    PanelToggle:
        group: self.parent.pair_name
        text: 'Off'
        pos_hint: {'x': .5, 'y': 0.05}
        state: 'down'
        on_release:
            self.parent.toggle_off_cb()


    PanelToggle:
        group: self.parent.pair_name
        text: 'On'
        pos_hint: {'x': .75, 'y': 0.05}
        on_release:
            self.parent.toggle_on_cb()



<Panel>
    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

    Image:
        size_hint: None, .225
        size: self.height, self.height

        pos_hint: {'x': .05, 'y': .75}
        source:
            'src/Sudoku150.png'

    Label:
        color: 0,0,0,1
        text: "Solving Sudokus\n  (with snakes)"
        bold: True
        font_size: app.text_size
        size_hint: .6, .15
        pos_hint: {'x': .4, 'y': .775}


    ToggleLayout:
        pos_hint: {'x': .05, 'y': .6}
        pair_name: 'Show Guides'
        toggle_on_cb: self.guides_on
        toggle_off_cb: self.guides_off

    ToggleLayout:
        pos_hint: {'x': .05, 'y': .475}
        pair_name: 'Realtime Inspection'
        toggle_on_cb: self.inspections_on
        toggle_off_cb: self.inspections_off

    TaskButtonGrid:

<TileLabel>

    background_color: app.trans
    color: app.text_color
    halign: 'center'
    valign: 'middle'
    font_size: 32
    multiline: False


<TileBackground>
    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size



<TileGuesses>
    rows: 3
    background_color: app.trans
    background_normal: ''
    cursor_color: app.text_color

<TileInput>

    background_color: app.trans
    background_normal: ''
    foreground_color: app.text_color
    cursor_blink: False
    cursor_color: app.trans
    halign: 'center'
    valign: 'middle'
    font_size: 32
    multiline: False
    selection_color: (1,1,1,.4)
    write_tab: False

<GuideLabel>

    canvas.before:
        Color:
            rgba: app.lh_color
        Rectangle:
            size: self.size
            pos: self.pos


#    opacity: 0


<NineBy>

    canvas.before:
        Color:
            rgba: app.elem_color
        Rectangle:
            size: self.size
            pos: self.pos

<HotkeysDisplay>

    canvas.before:
        Color:
            rgba: 0, 0, 0, .75
        Rectangle:
            size: self._window.size if self._window else (0, 0)
        Color:
            rgba: 0,0,0,.1
        Rectangle:
            size: self.size
            pos: self.pos

    background_color: app.trans
    separator_color: app.trans
    size_hint: (None, None)
    size: (600, 400)
    title: ''
    title_size: 0

    FloatLayout:

        

<PuzzlePicker>

    canvas.before:
        Color:
            rgba: 0, 0, 0, .75
        Rectangle:
            size: self._window.size if self._window else (0, 0)
        Color:
            rgba: 0,0,0,.1
        Rectangle:
            size: self.size
            pos: self.pos

    background_color: app.trans
    separator_color: app.trans
    size_hint: (None, None)
    size: (600, 400)
    title: ''
    title_size: 0

    FloatLayout:
#        cols: 2
        size_hint: None, None
        pos_hint: {'x': 0, 'y': .005}
        size: 600-27, 400-25


        TaskButtonLayout:
            button_text: 'Random'
            image_path: 'src/64random.png'
#            height: 400
            size_hint: .5, .6
            pos_hint: {'x': 0, 'y': .4}

        TaskButtonLayout:
            button_text: 'Enter ID'
            image_path: 'src/64search.png'
#            height: 400
            size_hint: .5, .6
            pos_hint: {'x': 0.5, 'y': .4}

        PuzzleRandomLayout:
            size_hint: (1, 1)
            pos_hint: {'x': 0, 'y': 0}

<PuzzleRandomLayout>



    TaskButtonLayout:
        button_text: 'Easy'
        image_path: 'src/64star.png'
        size_hint: 1/3, .4
        pos_hint: {'x': 0, 'y': 0}

    TaskButtonLayout:
        button_text: 'Intermediate'
        image_path: 'src/128med.png'
        size_hint: 1/3, .4
        pos_hint: {'x': 1/3, 'y': 0}

    TaskButtonLayout:
        button_text: 'Expert'
        image_path: 'src/128expert.png'
        size_hint: 1/3, .4
        pos_hint: {'x': 2/3, 'y': 0}



<Main>:
    canvas:
        Color:
            rgba: app.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

    NineBy:
        id: Nine
        size_hint: None, .95
        size: self.height, self.height
        pos_hint: {'y': 0.025}
        pos: (self.height * .025, self.y)

    Panel:
        size_hint: None, None
        size: Nine.width / 1.618, Nine.height
        pos: (Nine.width + 2*Nine.x, Nine.y)
